{
  "version": "0.1.0",
  "license": "MIT",
  "repository": "git@github.com:emcasa/ui.git",
  "author": "EmCasa <dev@emcasa.com>",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/expo",
      "**/expo/**",
      "**/metro",
      "**/metro/**",
      "**/metro-bundler-config-yarn-workspaces"
    ]
  },
  "engines": {
    "yarn": ">=1.15.2",
    "node": ">=10.10"
  },
  "scripts": {
    "prepare": "lerna run postinstall && lerna run prepublish",
    "start": "concurrently \"yarn watch\" \"yarn dev\"",
    "build": "lerna run build",
    "clean": "lerna run clean && rm -rf .docz",
    "nuke": "rm -rf node_modules && lerna exec -- rm -rf node_modules",
    "watch": "lerna run watch --parallel",
    "dev": "docz dev",
    "docz": "docz build",
    "release": "lerna exec --no-private --bail=false -- \"npm publish\"",
    "release:canary": "lerna publish --preid rc --dist-tag rc --npm-client npm --force-publish @emcasa/ui --canary "
  },
  "dependencies": {
    "formik": "^1.5.0",
    "google-map-react": "^1.1.4",
    "lodash": "^4.17.11",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-measure": "^2.2.4",
    "react-popper": "^1.3.3",
    "react-pose": "^4.0.6",
    "react-responsive": "^6.1.1",
    "react-spinners": "^0.5.4",
    "styled-components": "4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-react-native": "^5.0.2",
    "concurrently": "^4.0.1",
    "docz": "1.2.0",
    "docz-theme-default": "1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "jest": "23.6.0",
    "lerna": "^3.13.0",
    "metro-react-native-babel-preset": "^0.48.1"
  },
  "optionalDependencies": {}
}
